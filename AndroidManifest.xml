<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.masssms"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.masssms.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.masssms.GroupConstruction" >
        </activity>
        <activity android:name="com.example.masssms.SmsSender" >
        </activity>
        <activity
            android:name="com.example.masssms.PersonEditor"
            android:label="@string/title_activity_person_editor" >
        </activity>
        <activity
            android:name="com.example.masssms.GroupEditor"
            android:label="@string/title_activity_group_editor" >
        </activity>
        <activity
            android:name="com.example.masssms.PersonInGroup"
            android:label="@string/title_activity_person_in_group" >
        </activity>
        <activity
            android:name="com.example.masssms.GroupContent"
            android:label="@string/title_activity_group_content" >
        </activity>
    </application>

</manifest>